[include]
	path = ~/.local/gitconfig

[color]
	ui = true

[core]
	pager = less
	quotepath = off
	excludesFile = ~/.config/git/gitignore

[alias]
	st = status
	logv = log --name-status
	log-history = ! git log --all --pretty=format: --name-only | sort -u
	log-history-stat = ! git log --all --pretty=format: --name-only | sort | uniq -c
