(supertux-config
	;; the following options can be set to #t or #f:
	(fullscreen #t)
	(sound      #t)
	(music      #f)
	(show_fps   #f)

	;; either "opengl" or "sdl"
	(video      "opengl")

	;; joystick number (-1 means no joystick):
	(joystick   -1)
	(joystick-x   0)
	(joystick-y   1)
	(joystick-a   0)
	(joystick-b   1)
	(joystick-start  2)
	(joystick-deadzone  4096)
	(keyboard-jump  32)
	(keyboard-duck  274)
	(keyboard-left  276)
	(keyboard-right 275)
	(keyboard-fire  306)
)
