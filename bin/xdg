#!/bin/bash
# Script for XDG directory support.
# Tries to make XDG-compliant environment.

. ~/.config/xdg/base.inc.sh
. ~/.config/xdg/config.inc.sh
. ~/.config/xdg/data.inc.sh
. ~/.config/xdg/state.inc.sh
. ~/.config/xdg/cache.inc.sh
. ~/.config/xdg/runtime.inc.sh
. ~/.config/xdg/path.inc.sh

# If supplied, run command in XDG-compliant environment.
if [ -n "$BASH" ]; then
	if [ "$0" == "$BASH_SOURCE" -a -n "$1" ]; then
		exec "$@"
	fi
fi
