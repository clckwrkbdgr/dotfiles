#!/bin/bash

F=$(find -L . \! -executable | sort -f | grep -v 'sample' | egrep '(ogm|avi|mkv|mp4|wmv|mpg|mov)$' | head -1)
if [ -z "$F" ]; then
	ls -vRL --color=auto
	echo 'All done.'
	exit
fi
YES=y
if [ "x$1" == "x-i" ]; then
	shift
	ls -vRL --color=auto
	echo "${F}, continue?"
	read YES
fi
if [ "$YES" = "y" ]; then
	mplayer $@ "$F" && chmod a+x "$F"
fi
